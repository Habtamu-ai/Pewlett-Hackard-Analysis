SELECT retirement_info.emp_no,
    retirement_info.first_name,
retirement_info.last_name,
    dept_manager.to_date
FROM retirement_info
LEFT JOIN dept_manager
ON retirement_info.emp_no = dept_manager.emp_no;

#shorten name and make inner joins

SELECT d.dept_name,
     dm.emp_no,
     dm.from_date,
     dm.to_date
	 FROM departments as d
INNER JOIN dept_manager as dm
ON d.dept_no = dm.dept_no;

--left join retirment info with dep_mgr instead of dpt_emo 
--since i couldnt upload the later one
SELECT ri.emp_no,
    ri.first_name,
    ri.last_name,
dm.to_date
INTO current_emp
FROM retirement_info as ri
LEFT JOIN dept_manager as dm
ON ri.emp_no = dm.emp_no
WHERE dm.to_date = ('9999-01-01');
SELECT*FROM current_emp;
#### count,group and orderby(finding the retiree people)
-- Employee count by department number
SELECT COUNT(ce.emp_no), de.dept_no
FROM current_emp as ce
LEFT JOIN dept_emp as de
ON ce.emp_no = de.emp_no
GROUP BY de.dept_no
ORDER BY de.dept_no;

---left join salaries and employees with "empployment "info
SELECT e.emp_no,
    e.first_name,
e.last_name,
    e.gender,
    s.salary,
    de.to_date
/*INTO emp_info*/
FROM employees as e
INNER JOIN salaries as s
ON (e.emp_no = s.emp_no)
INNER JOIN dept_emp as de
ON (e.emp_no = de.emp_no)
WHERE (e.birth_date BETWEEN '1952-01-01' AND '1955-12-31')
     AND (e.hire_date BETWEEN '1985-01-01' AND '1988-12-31')
	 AND (de.to_date = '9999-01-01');

     -- List of managers per department#department info
SELECT  dm.dept_no,
        d.dept_name,
        dm.emp_no,
        ce.last_name,
        ce.first_name,
        dm.from_date,
        dm.to_date
INTO manager_info
FROM dept_manager AS dm
    INNER JOIN departments AS d
        ON (dm.dept_no = d.dept_no)
    INNER JOIN current_emp AS ce
        ON (dm.emp_no = ce.emp_no);

        ---creating department info		
SELECT ce.emp_no, 
     ce.first_name, 
	 ce.last_name, 
	 d.dept_name
INTO dept_info
FROM current_emp as ce
INNER JOIN dept_emp AS de
ON (ce.emp_no = de.emp_no)
INNER JOIN departments AS d
ON (de.dept_no = d.dept_no);